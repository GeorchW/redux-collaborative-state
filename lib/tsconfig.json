{
    "compilerOptions": {
        "baseUrl": ".",
        "rootDir": "src",
        "outDir": "dist",
        "target":"ESNext",
        "lib": ["esnext", "dom"],
        "module": "esnext",
        "sourceMap": true,
        "declaration": true,
        "allowSyntheticDefaultImports": true,
        "moduleResolution": "node",


    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    }
}